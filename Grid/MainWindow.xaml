<Window x:Class="Grid.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Grid"
		mc:Ignorable="d"
		Title="Контейнер компоновки Grid" Width="480" Height="360">
	<Grid ShowGridLines="True">
		<Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
		<TextBlock Grid.Column="0" Grid.Row="0" Margin="20" Padding="10" Background="LightCoral">Grid.Column="0" Grid.Row="0"</TextBlock>
		<TextBlock Grid.Column="1" Grid.Row="0" Margin="20" Padding="10" Background="LightCyan">Grid.Column="1" Grid.Row="0"</TextBlock>
		<TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="20" Padding="10" Background="LightGreen">Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"</TextBlock>
	</Grid>
</Window>