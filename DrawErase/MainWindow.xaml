<Window x:Class="DrawErase.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:DrawErase"
		mc:Ignorable="d"
		Title="Рисование и стирание" Width="320" Height="240" MinWidth="320" MinHeight="240">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<CheckBox Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Content="Режим стирания" Grid.Row="0" Margin="10"/>
		<InkCanvas Name="inkCanvas" Grid.Row="1" Margin="10" Background="LightBlue"/>
	</Grid>
</Window>