<Window x:Class="Menu.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Menu"
		mc:Ignorable="d"
		Title="Меню" Width="320" Height="240" MinWidth="320" MinHeight="240">
	<DockPanel>
		<WrapPanel DockPanel.Dock="Top" Background="LightBlue">
			<TextBlock Padding="10">Файл</TextBlock>
			<TextBlock Padding="10">Правка</TextBlock>
			<TextBlock Padding="10">Вид</TextBlock>
			<TextBlock Padding="10">Окно</TextBlock>
			<TextBlock Padding="10">Настройки</TextBlock>
			<TextBlock Padding="10">Справка</TextBlock>
			<TextBlock Padding="10">Поиск</TextBlock>
		</WrapPanel>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<TextBox Name="textField" Text="[Введите текст.]" Grid.Row="0" Margin="10" Padding="5"/>
			<Button Click="clearTextField" Content="Очистить текстовое поле" Grid.Row="1" Margin="10" Padding="5"/>
		</Grid>
	</DockPanel>
</Window>